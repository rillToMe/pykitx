:root {
  --bg: #0b0c10;
  --text: #e5e7eb;
  --sub: #9ca3af;
  --accent: #6ea8fe;
}
* { box-sizing: border-box; }

body {
  margin: 0;
  background: var(--bg);
  color: var(--text);
  font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

main.center {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  gap: 0.75rem;
  padding: 2rem;
}

.logo {
  width: 80px;
  height: 80px;
  margin-bottom: 0.5rem;
}

h1 { font-size: 1.8rem; margin: 0; }

p { color: var(--sub); margin: 0.3rem 0 1rem; }

.links { margin-top: 1rem; }

a.btn {
  display: inline-block;
  padding: 8px 14px;
  background: var(--accent);
  color: #000;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  transition: 0.2s;
}

a.btn:hover { opacity: 0.9; transform: translateY(-1px); }

footer {
  text-align: center;
  font-size: 0.85rem;
  color: var(--sub);
  padding: 1.2rem 0;
  border-top: 1px solid rgba(255,255,255,0.1);
}

footer .footer-link {
  color: var(--sub);
  text-decoration: none;
}

footer .footer-link:hover {
  color: var(--sub);
  text-decoration: underline;
}

.powered {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 6px;
  font-size: 0.9rem;
  color: var(--sub);
  margin-top: 0.3rem;
}

.powered-link {
  color: var(--sub);
  text-decoration: none;
  font-weight: 500;
}

.powered-link:hover {
  color: var(--text);
  text-decoration: underline;
  transition: 0.2s;
}

.github-icon {
  color: var(--sub);
  margin-left: 6px;
  font-size: 1rem;
  text-decoration: none;
}
.github-icon:hover {
  color: var(--text);
  transition: 0.2s;
}


.mini {
  position: relative;
}
.mini[data-tooltip]::before {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 130%;
  left: 50%;
  transform: translateX(-50%);
  padding: 6px 12px;
  background: rgba(0, 0, 0, 0.9);
  color: #fff;
  font-size: 12px;
  font-weight: 500;
  border-radius: 6px;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s, transform 0.2s;
  z-index: 100;
}
.mini[data-tooltip]::after {
  content: "";
  position: absolute;
  bottom: 125%;
  left: 50%;
  transform: translateX(-50%);
  border: 5px solid transparent;
  border-top-color: rgba(0, 0, 0, 0.9);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s;
  z-index: 100;
}
.mini:hover[data-tooltip]::before,
.mini:hover[data-tooltip]::after {
  opacity: 1;
  transform: translateX(-50%) translateY(-2px);
}
